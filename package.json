{
  "name": "cocktail-buisness",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npx prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:prod": "tsx prisma/seed.prod.ts",
    "db:dev": "cp prisma/schema.dev.prisma prisma/schema.prisma && npx prisma generate && npx prisma migrate dev",
    "db:prod": "cp prisma/schema.prod.prisma prisma/schema.prisma && npx prisma generate",
    "build:prod": "npm run db:prod && npx prisma generate && next build",
    "postinstall": "npx prisma generate"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@prisma/client": "^6.12.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@stripe/stripe-js": "^7.4.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "autoprefixer": "^10.4.21",
    "lightningcss": "^1.30.1",
    "next": "^15.5.3",
    "prisma": "^6.12.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.58.1",
    "stripe": "^18.2.1",
    "styled-components": "^6.1.19",
    "tailwindcss": "^3.4.17",
    "vercel": "^48.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/styled-components": "^5.1.34",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "tsx": "^4.20.3",
    "typescript": "^5"
  },
  "overrides": {
    "esbuild": "^0.25.9",
    "path-to-regexp": "^6.2.3",
    "undici": "^6.0.0",
    "lightningcss": "^1.30.1"
  }
}
