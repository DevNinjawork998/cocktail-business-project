// Development schema using SQLite
// Copy this to schema.prisma for local development

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id              String   @id @default(cuid())
  name            String
  subtitle        String
  description     String
  longDescription String
  price           String
  priceSubtext    String
  imageColor      String
  features        Json     // Array of { text: string; color: string }
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("products")
} 